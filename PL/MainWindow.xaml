        <Button Name ="btNewOrderDisplay"  Content="New order" HorizontalAlignment="Left" VerticalAlignment="Top" Height="56" Width="140" Click="btNewOrderDisplay_Click" Margin="550,350,0,0" Background="#FF893E42" Foreground="#FF908989" FontSize="16" FontFamily="Tekton Pro"/>
