<Window x:Class="PL.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AddOrUpdate" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="TextBoxStyle" TargetType="{x:Type TextBox}">
            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="BorderBrush" Value="Red" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <TextBox Name="txbProductID" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="146,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txbProductName" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="146,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txbProductPrice" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="146,280,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txbProductStockCount" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="146,350,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <ComboBox Name="CategoryOptions" HorizontalAlignment="Left" Margin="146,210,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Name="lID" Content="Product ID:" HorizontalAlignment="Left" Margin="45,65,0,0" VerticalAlignment="Top"/>
        <Label Name="lName" Content="Product Name:" HorizontalAlignment="Left" Margin="45,135,0,0" VerticalAlignment="Top"/>
        <Label Name="lCategory" Content="Product category:" HorizontalAlignment="Left" Margin="45,205,0,0" VerticalAlignment="Top"/>
        <Label Name="lPrice" Content="Product price:" HorizontalAlignment="Left" Margin="45,275,0,0" VerticalAlignment="Top"/>
        <Label Name="lAmount" Content="Product amount:" HorizontalAlignment="Left" Margin="45,345,0,0" VerticalAlignment="Top"/>
        <Button Name="btAddProduct" Content="Add" HorizontalAlignment="Left" Margin="636,358,0,0" VerticalAlignment="Top" Height="42" Width="130" Click="btAddProduct_Click"/>
        <Button Name="btUpdateProduct" Content="Update" HorizontalAlignment="Left" Margin="636,358,0,0" VerticalAlignment="Top" Height="42" Width="130" Click="btUpdateProduct_Click"/>
        <Grid Margin="0,10,0,-10">
            <Image Name="NewImage" HorizontalAlignment="Left" Height="256" VerticalAlignment="Top" Width="290" Margin="440,59,0,0"/>
        </Grid>
        <Button Name= "UpdateImage" Content="update Image" HorizontalAlignment="Left" Margin="531,372,0,0" VerticalAlignment="Top" Click="UpdateButton_Click" Height="28" Width="88"/>
        <Button Name= "AddImage" Content="Add Image" HorizontalAlignment="Left" Margin="531,372,0,0" VerticalAlignment="Top" Click="AddButton_Click" Height="28" Width="88"/>

    </Grid>
</Window>
